#log rotation configuration for /var/log/speedtest.htm
#drop this file into /etc/logrotate.d
/var/log/speedtest.htm {
	daily
	copytruncate
	rotate 5
	compress
	delaycompress
	missingok
	notifempty
	nomail
    postrotate
        echo '<html><head><title>Speedtest Log</title><style>table{width:100%;border-collapse:collapse;font-family:Verdana,Geneva,Tahoma,sans-serif;}table td{padding:10px;border:#4e95f4 1px solid}table tr:nth-child(odd){background:#cdd9e8}table tr:nth-child(even){background:#dae5f4}</style></head><body><table><tbody><tr><td>No data</td></tr>\n<tbody/></table></body></html>' > /var/log/speedtest.htm
    endscript
}
